{
    "name": "RSS Aggregator extension",
    "description": "Get notifications from websites",
    "manifest_version": 2,
    "version": "1.0",
    "browser_action": {
        "default_title": "Hover to see websites with new notifications",
        "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": ["storage","alarms","http://*/*","https://*/*","tabs","<all_urls>"]
}
